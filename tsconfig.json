{
    "compilerOptions": {
      "target": "es5",
      "lib": [
        "dom",
        "dom.iterable",
        "esnext"
      ],
      "baseUrl": ".",
      "rootDir": "./packages", /* 需要设置该路径为./packages, 不然packages 会自动作为.d.ts的输出文件名 */
      "allowJs": true,
      "skipLibCheck": true,
      "esModuleInterop": true,
      "allowSyntheticDefaultImports": true,
      "strict": true,
      "forceConsistentCasingInFileNames": true,
      "noFallthroughCasesInSwitch": true,
      "module": "esnext",
      "moduleResolution": "node",
      "resolveJsonModule": true,
      "isolatedModules": true,
      "noImplicitReturns": true,
      "noImplicitThis": true,
      "noImplicitAny": true,
      "strictNullChecks": true,
      "noEmit": true,
      "jsx": "react-jsx",
      "importHelpers": true,
      "outDir": "dist",
      "declaration": true,
      "declarationDir": "dist/@types",
      // "emitDeclarationOnly": true,  /* 只生成声明文件，不生成 js 文件 */ 
    },
    "include": [
      "packages"
    ],
    "exclude": ["node_modules", "packages/**/*.spec.ts"],
    "types": [
      "typePatches"
    ],
  }